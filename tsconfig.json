{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": "./src/",
		"paths": {
			"@/assets/*": ["assets/*"],
			"@/components/*": ["components/*"],
			"@/providers/*": ["providers/*"],
			"@/ui/*": ["components/ui/*"],
			"@/screens/*": ["components/screens/*"],
			"@/hooks/*": ["hooks/*"],
			"@/shared/*": ["shared/*"],
			"@/config/*": ["config/*"],
			"@/services/*": ["services/*"],
			"@/utils/*": ["utils/*"],
			"@/store/*": ["store/*"],
			"@/pages/*": ["../../../../../../pages/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/providers/auth-provider/AuthProvider.tss",
		"src/providers/auth-provider/AuthProvider.tss"
	],
	"exclude": ["node_modules"]
}
